{
  "template_file": "D:\\결산\\일일결산_템플릿.xlsx",
  "output_pdf": "D:\\결산\\PDF\\일일결산_{date}.pdf",
  "target_sheet": "복구됨_Sheet2",

  "validation": {
    "chart_number_min": 1,
    "chart_number_max": 210000,
    "allow_leading_zero": false,
    "file_extensions": [".pdf", ".jpg", ".jpeg", ".png", ".bmp"]
  },

  "equipment": {
    "SP": {
      "name": "내피",
      "path": "\\\\192.168.0.120\\sp",
      "pattern": "(\\d+)_[LR]_",
      "scan_type": "top_level",
      "cell": {"row": 15, "col": 3},
      "use_creation_time": true,
      "comment": "최상위 폴더, 오늘 생성 파일만. 예: 김대혁 134348_L_Center.jpg"
    },
    "TOPO": {
      "name": "Tomey",
      "path": "\\\\topo\\Topo",
      "pattern": "\\s(\\d+)-\\d+$",
      "scan_type": "date_folder",
      "cell": {"row": 16, "col": 3},
      "folder_structure": "YYYY\\YYYY.MM\\TOPO MM.DD",
      "comment": "날짜별 폴더. 예: 김대혁 134348-18 (폴더명)"
    },
    "ORB": {
      "name": "ORB",
      "path": "\\\\orb\\orb",
      "pattern": "\\s(\\d+)\\s+o[ds]-",
      "scan_type": "date_folder",
      "cell": {"row": 14, "col": 3},
      "folder_structure": "YYYY\\YYYY.MM\\ORB MM.DD",
      "comment": "날짜별 폴더. 예: kim, dae hyeok 134348 od-18"
    },
    "OCT": {
      "name": "OCT",
      "path": "\\\\192.168.0.221\\pdf",
      "pattern": "__(\\d+)_\\d{8}_",
      "scan_type": "date_folder",
      "cell": {"row": 12, "col": 3},
      "folder_structure": "YYYY\\MM\\oct MM.DD",
      "comment": "날짜별 폴더. 예: an_hyeong ju__16638_19370818_..."
    },
    "HFA": {
      "name": "시야",
      "path": "\\\\geomsa-main2\\hfa",
      "pattern": "_SFA_(\\d+)\\.pdf",
      "scan_type": "top_level",
      "cell": {"row": 11, "col": 3},
      "use_creation_time": true,
      "comment": "최상위 폴더, 오늘 생성 파일만. 예: PAR_..._SFA_118541.Pdf"
    },
    "OQAS": {
      "name": "백내장",
      "path": "\\\\oqas\\oqass",
      "pattern": "\\s(\\d+)\\s+o[ds]-",
      "scan_type": "date_folder",
      "cell": {"row": 8, "col": 3},
      "folder_structure": "YYYY\\MM\\DD.MM",
      "comment": "날짜별 폴더. 예: kim,dae hyeok 134348 os-18"
    }
  },

  "special_items": {
    "녹내장": {
      "type": "intersection",
      "sources": ["HFA", "OCT"],
      "cell": {"row": 9, "col": 3}
    },
    "안저": {
      "folders": [
        "\\\\AFC-210-PC\\Fundus2",
        "\\\\192.168.0.213\\images\\Secondary"
      ],
      "pattern": "_(\\d+)_\\d{3}\\.jpg",
      "cell": {"row": 13, "col": 3},
      "use_creation_time": true,
      "comment": "두 폴더 모두 최상위, 오늘 생성 파일만. 예: 구정순  _148022_000.jpg"
    }
  },

  "manual_input": {
    "라식": {"row": 10, "col": 3},
    "FAG": {"row": 18, "col": 3},
    "안경검사": {"row": 17, "col": 3}
  },

  "staff_cell": {"row": 6, "col": 2},
  "date_cell": {"row": 4, "col": 1},

  "staff_list": [
    "김창범", "김수지", "김대혁", "김민지",
    "박현진", "고은서", "김현호", "임량현",
    "유예나", "김태호"
  ],

  "reservation": {
    "verion_keywords": ["toric"],
    "lensx_keywords": ["lens x", "lensx", "vivity"],
    "ex500_keywords": ["라식", "라섹", "lasik", "lasek", "올레이저"],
    "cells": {
      "verion": {"row": 19, "col": 3},
      "lensx": {"row": 23, "col": 3},
      "ex500": {"row": 22, "col": 3}
    }
  }
}
